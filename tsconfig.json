{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["es6"],
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
